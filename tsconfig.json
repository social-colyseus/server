{
  "compilerOptions": {
    "outDir": "dist",
    "outFile": "dist/index.js",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "target": "es2016",
    "declaration": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "examples"
  ]
}
